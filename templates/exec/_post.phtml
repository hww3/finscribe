<script type="text/javascript">
 dojo.require("dojo.widget.DropdownDatePicker");
 dojo.require("dojo.widget.ResizableTextArea");
</script>

<h3><%LOCALE string="Posting"%>: <%$obj%></h3>
<form action="" method="post" id="postblogform">
<table>
<tr>
<td>
<b><%LOCALE string="Subject"%>:</b> 
</td>
<td>
<input type="text" name="subject" size="40" value="<%$subject%>"/>
<br/>
</td>
</tr>
<tr>
<td></td>
<td>
<textarea dojoType="resizabletextarea" rows="20" cols="80" name="contents"><%$contents%></textarea>
<br/>
</td>
</tr>
<tr>
<td>
<b><%LOCALE string="TrackBack URLs"%>: </b>
<br>(<%LOCALE string="click preview to detect"%> <a 
href="http://en.wikipedia.org/wiki/Trackback"><%LOCALE string="TrackBack"%></a> <%LOCALE string="URLs"%>)
<br/>
</td>
<td>
<textarea dojoType="resizabletextarea" rows="5" cols="80" name="trackbacks"><%$trackbacks%></textarea> 
<br/>
</td>
</tr>
<tr>
<td>
<b><%LOCALE string="Publish Date"%>: </b>
</td>
<td>
<input type="text" size="15" <%$showcreated%> id="createdDate" name="createddate"
value="<%$createddate%>" dojoType="dropdowndatepicker" />
<input type="checkbox" name="created_toggle" <%$createchecked%> onclick="toggleCreated()"/>
</td>
</tr>
<tr>
<td colspan="2">
<% if data->ajax %>
<input type="hidden" name="ajax" value="1"/>
<input type="hidden" id="postformajaxaction" name="action" value="" />

<button type="button" onclick="document.getElementById('postformajaxaction').value='Preview'; postBlog('popup_contents', '<%$object.path%>', 'postblogform'); return false;" name="action" value="Preview"><%LOCALE string="Preview"%></button>
<button type="button" onclick="closePopup(); return false;" name="action" value="Cancel"><%LOCALE string="Cancel"%></button>
<button type="button" onclick="document.getElementById('postformajaxaction').value='Save'; postBlog('popup_contents', '<%$object.path%>', 'postblogform'); return false;" name="action" value="Save"><%LOCALE string="Save"%></button>
<button type="button" onclick="document.getElementById('postformajaxaction').value='Post'; postBlog('popup_contents', '<%$object.path%>', 'postblogform'); return false;" name="action" value="Post"><%LOCALE string="Post"%></button> 
<% else %>
<button type="submit" name="action" value="Preview"><%LOCALE string="Preview"%></button>
<button type="submit" name="action" value="Cancel"><%LOCALE string="Cancel"%></button>
<button type="submit" name="action" value="Save"><%LOCALE string="Save"%></button>
<button type="submit" name="action" value="Post"><%LOCALE string="Post"%></button>
<% endif %>
</td>
</tr>
</table>
</form>

<%if data->preview %>
<b><%LOCALE string="Preview"%>:</b><p/>
<%$preview%>
<% endif %>
