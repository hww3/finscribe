<h3>Posting: <%$obj%></h3>
<form action="" method="post" id="postblogform">
<table>
<tr>
<td>
<b>Subject:</b> 
</td>
<td>
<input type="text" name="subject" size="40" value="<%$subject%>"/>
<br/>
</td>
</tr>
<tr>
<td></td>
<td>
<textarea dojoType="resizabletextarea" rows="20" cols="80" name="contents"><%$contents%></textarea>
<br/>
</td>
</tr>
<tr>
<td>
<b>TrackBack URLs: </b>
<br>(click preview to detect <a 
href="http://en.wikipedia.org/wiki/Trackback">TrackBack</a> URLs)
<br/>
</td>
<td>
<textarea dojoType="resizabletextarea" rows="5" cols="80" name="trackbacks"><%$trackbacks%></textarea> 
<br/>
</td>
</tr>
<tr>
<td>
<b>Publish Date: </b>
</td>
<td>
<input type="text" size="15" <%$showcreated%> id="createdDate" name="createddate"
value="<%$createddate%>"/ >
<input type="checkbox" name="created_toggle" <%$createchecked%> onclick="toggleCreated()"/>
</td>
</tr>
<tr>
<td colspan="2">
<% if data->ajax %>
<input type="hidden" name="ajax" value="1"/>
<input type="hidden" id="postformajaxaction" name="action" value="" />

<input type="button" onclick="document.getElementById('postformajaxaction').value='Preview'; postBlog('popup_contents', '<%$object.path%>', 'postblogform'); return false;" name="action" value="Preview"/>
<input type="button" onclick="closePopup(); return false;" name="action" value="Cancel"/>
<input type="button" onclick="document.getElementById('postformajaxaction').value='Save'; postBlog('popup_contents', '<%$object.path%>', 'postblogform'); return false;" name="action" value="Save"/>
<input type="button" onclick="document.getElementById('postformajaxaction').value='Post'; postBlog('popup_contents', '<%$object.path%>', 'postblogform'); return false;" name="action" value="Post"/> 
<% else %>
<input type="submit" name="action" value="Preview"/>
<input type="submit" name="action" value="Cancel"/>
<input type="submit" name="action" value="Save"/>
<input type="submit" name="action" value="Post"/>
<% endif %>
</td>
</tr>
</table>
</form>

<%if data->preview %>
<b>Preview:</b><p/>
<%$preview%>
<% endif %>
